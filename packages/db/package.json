{
  "name": "@carhub/db",
  "version": "0.0.1",
  "description": "Shared Prisma package for CarHub",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist",
    "dev": "tsup --watch src/index.ts --format cjs,esm --dts --out-dir dist",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema prisma/schema.prisma --name init",
    "prisma:db:studio": "prisma studio --schema prisma/schema.prisma",
    "prisma:db:reset": "prisma db reset --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "6.15.0"
  },
  "devDependencies": {
    "prisma": "6.15.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "@types/node": "20.11.0",
  "@nestjs/common": "^11.0.1",
  "class-transformer": "^0.5.1",
  "class-validator": "^0.14.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  }
}

