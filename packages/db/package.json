{
  "name": "@carhub/db",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/prisma/schema.prisma"
  ],
  "scripts": {
    "prepare": "dotenv -e ../../.env -- prisma generate --schema=src/prisma/schema.prisma",
    "build": "tsc -p tsconfig.json",
    "prisma:generate": "dotenv -e ../../.env -- prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "dotenv -e ../../.env -- prisma migrate dev --schema=src/prisma/schema.prisma",
    "prisma:deploy": "dotenv -e ../../.env -- prisma migrate deploy --schema=src/prisma/schema.prisma",
    "prisma:studio": "dotenv -e ../../.env -- prisma studio --schema=src/prisma/schema.prisma",
    "prisma:reset": "dotenv -e ../../.env -- prisma migrate reset --schema=src/prisma/schema.prisma",
    "db:seed": "dotenv -e ../../.env -- tsx src/prisma/seed.ts"
  },
  "dependencies": {
    "@carhub/env": "workspace:*",
    "@prisma/client": "^6.1.0"
  },
  "devDependencies": {
    "prisma": "^6.1.0",
    "typescript": "^5.7.3",
    "@types/node": "^22.10.7",
    "dotenv-cli": "^7.4.2",
    "@faker-js/faker": "^9.2.0",
    "bcryptjs": "^2.4.3",
    "tsx": "^4.19.2"
  }
}
